<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lbycp24_everreadygroup.gopink" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="GoPink!"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".SplashScreenActivity"
            android:label="GoPink!" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MenuActivity"
            android:label="GoPink!"
            android:theme="@style/BlackText">
            <intent-filter>
                <action android:name="com.coderefer.androidsplashscreenexample.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Information"
            android:label="Information"
            android:theme="@style/BlackText">
        </activity>

        <activity
            android:name=".News"
            android:label="News"
            android:theme="@style/BlackText">
        </activity>

        <activity
            android:name=".Testimonies"
            android:label="Testimonies"
            android:theme="@style/BlackText">
        </activity>

        <activity
            android:name=".Help"
            android:label="Help"
            android:theme="@style/BlackText">
        </activity>

        <activity
            android:name=".Facts"
            android:label="Facts">
        </activity>

        <activity
            android:name=".Treatments"
            android:label="Treatments">
        </activity>



    </application>

</manifest>